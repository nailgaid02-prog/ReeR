# ReeR VPN - Конфигурация окружения
# Скопируйте этот файл в .env и отредактируйте значения

# ==================================
# Основные настройки
# ==================================

# IP адрес вашего сервера (автоматически определяется при установке)
SERVER_IP=

# Домен (опционально, если используете)
# SERVER_DOMAIN=vpn.example.com

# ==================================
# Порты
# ==================================

# Порт веб-панели 3x-ui
PANEL_PORT=54321

# Порт VLESS Reality (рекомендуется 443)
VLESS_PORT=443

# Порт VMess WebSocket
VMESS_PORT=2053

# ==================================
# Безопасность
# ==================================

# Логин администратора (смените!)
ADMIN_USERNAME=admin

# Пароль администратора (ОБЯЗАТЕЛЬНО смените!)
ADMIN_PASSWORD=admin

# Секретный ключ для панели (генерируется автоматически)
# SECRET_KEY=

# ==================================
# Дополнительные настройки
# ==================================

# Часовой пояс
TZ=Europe/Moscow

# Включить автообновления контейнеров (true/false)
AUTO_UPDATE=true

# Интервал проверки обновлений (в секундах, 86400 = 1 день)
UPDATE_INTERVAL=86400

# Уровень логирования (debug, info, warning, error)
LOG_LEVEL=info

# ==================================
# Watchtower (автообновления)
# ==================================

# Включить Watchtower
WATCHTOWER_ENABLED=true

# Очищать старые образы
WATCHTOWER_CLEANUP=true

# Уведомления (опционально)
# WATCHTOWER_NOTIFICATION_URL=

# ==================================
# Резервное копирование
# ==================================

# Директория для бэкапов
BACKUP_DIR=./backups

# Сколько дней хранить бэкапы
BACKUP_RETENTION_DAYS=7
